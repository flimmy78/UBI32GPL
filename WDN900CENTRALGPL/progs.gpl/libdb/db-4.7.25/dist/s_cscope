#!/bin/sh -
#	$Id: s_cscope,v 1.1.1.1 2009/10/09 03:02:22 jack Exp $
#
# Build cscope files.

(
echo ../dbinc/*.in ../dbinc/*.h ../dbinc_auto/*.h;
cat srcfiles.in |
sed -e '/^#/d' \
    -e '/^$/d' \
    -e 's/^/..\//' \
    -e '/\/csv_local.c/d' \
    -e '/\/db_server_clnt.c/d' \
    -e '/\/db_server_svc.c/d' \
    -e '/\/db_server_xdr.c/d' \
    -e '/\/gen_db_server.c/d' |
awk '{print $1}') | cscope -bkUu  -i- 2>&1 | sed '/cannot find file/d'
